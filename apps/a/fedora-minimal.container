[Unit]
Description=A minimal fedora container

[Container]
# fedora-minimal:39
Image=quay.io/fedora/fedora-minimal@sha256:a6f54703edc316885410e686f883ebbd8760bbeeef02d0e26e06ed5f686438f8

# In the container we just run sleep
Exec=sleep 60

PodmanArgs=--storage-opt=overlay.additionalimagestore=/var/apps/a6f54703edc316885410e686f883ebbd8760bbeeef02d0e26e06ed5f686438f8

[Service]
# Restart service when sleep finishes
Restart=always

[Install]
WantedBy=multi-user.target default.target
